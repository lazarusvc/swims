@page
@model LoginModel

@{
    ViewData["title"] = "Log in";
}

@{
    ViewData["script"] = @" <script>
    // ================== Password Show Hide Js Start ==========
    function initializePasswordToggle(toggleSelector) {
        $(toggleSelector).on('click', function() {
            $(this).toggleClass('ri-eye-off-line');
            var input = $($(this).attr('data-toggle'));
            if (input.attr('type') === 'password') {
                input.attr('type', 'text');
            } else {
                input.attr('type', 'password');
            }
        });
    }
    // Call the function
    initializePasswordToggle('.toggle-password');
    // ========================= Password Show Hide Js End ===========================
</script>";
}

<section class="auth bg-base d-flex flex-wrap">
    <div class="auth-left d-lg-block d-none">
        <div class="d-flex align-items-center flex-column h-100 justify-content-center">
            <img src="~/WowDash/images/auth/auth-img.png" alt="">
        </div>
    </div>
    <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
        <div class="max-w-464-px mx-auto w-100">
            <div>
                <a href="~/index" class="mb-40 max-w-290-px">
                    <img src="~/WowDash/images/logo.svg" alt="">
                </a>
                <h4 class="mb-12">Sign In to your Account</h4>
                <p class="mb-32 text-secondary-light text-lg">Welcome back! please enter your details</p>
            </div>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div class="icon-field mb-0">
                    <span class="icon top-50 translate-middle-y">
                        <iconify-icon icon="mage:email"></iconify-icon>
                    </span>
                    <input asp-for="Input.Email" type="text" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="Username / Email">
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="position-relative mb-20">
                    <div class="icon-field">
                        <span class="icon top-50 translate-middle-y">
                            <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                        </span>
                        <input asp-for="Input.Password" type="password" class="form-control h-56-px bg-neutral-50 radius-12" id="your-password" placeholder="Password">
                    </div>
                    <span class="toggle-password ri-eye-line cursor-pointer position-absolute end-0 top-50 translate-middle-y me-16 text-secondary-light" data-toggle="#your-password"></span>
                </div>
                
                <div class="">
                    <div class="checkbox d-flex justify-content-between gap-2">
                        <div class="form-check style-check d-flex align-items-center">
                            <input asp-for="Input.RememberMe" class="form-check-input border border-neutral-300">
                            <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe) </label>
                        </div>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary-600 fw-medium">Forgot Password?</a>
                    </div>
                </div>

                <button id="login-submit" type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32"> Sign In</button>

                <div class="mt-32 text-center text-sm">
                    <p class="mb-0">Don’t have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary-600 fw-semibold">Sign Up</a></p>
                    <p class="mb-0">Account not confirmed? <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-primary-600 fw-semibold">Resend email confirmation</a></p>

                </div>

            </form>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
