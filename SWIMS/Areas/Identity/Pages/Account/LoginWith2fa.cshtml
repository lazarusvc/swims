@page
@model LoginWith2faModel
@{
    ViewData["title"] = "Two-factor authentication";
}

<section class="auth bg-base d-flex flex-wrap">
    <div class="auth-left d-lg-block d-none">
        <div class="d-flex align-items-center flex-column h-100 justify-content-center">
            <img src="~/WowDash/images/auth/auth-img.png" alt="">
        </div>
    </div>
    <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
        <div class="max-w-464-px mx-auto w-100">
            <div>
                <a href="~/index" class="mb-40 max-w-290-px">
                    <img src="~/WowDash/images/logo.png" alt="">
                </a>
                <h4 class="mb-12">@ViewData["title"]</h4>
                <p class="mb-32 text-secondary-light text-lg">Your login is protected with 2-Factor Authentication. Enter your authenticator code below.</p>
            </div>
            <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                <div class="icon-field mb-20">
                    <span class="icon top-50 translate-middle-y">
                        <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                    </span>
                    <input asp-for="Input.TwoFactorCode" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="Authenticator Code">
                </div>

                <div class="">
                    <div class="checkbox d-flex justify-content-between gap-2">
                        <div class="form-check style-check d-flex align-items-center">
                            <input asp-for="Input.RememberMachine" class="form-check-input border border-neutral-300">
                            <label asp-for="Input.RememberMachine" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMachine) </label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32"> Sign In</button>

                <div class="mt-32 text-center text-sm">
                    <p class="mb-0">
                        Don't have access to your authenticator device? You can 
                        <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary-600 fw-semibold">log in with a recovery code</a>.
                    </p>

                </div>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}