@page
@model ResendEmailConfirmationModel
@{
    ViewData["title"] = "Resend email confirmation";
}

<section class="auth forgot-password-page bg-base d-flex flex-wrap">
    <div class="auth-left d-lg-block d-none">
        <div class="d-flex align-items-center flex-column h-100 justify-content-center">
            <img src="~/WowDash/images/auth/forgot-pass-img.png" alt="">
        </div>
    </div>
    <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
        <div class="max-w-464-px mx-auto w-100">
            <div>
                <h4 class="mb-12">@ViewData["title"]</h4>
                <p class="mb-32 text-secondary-light text-lg">Enter the email address associated with your account and we will resend your account email confirmation.</p>
            </div>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <div class="icon-field">
                    <span class="icon top-50 translate-middle-y">
                        <iconify-icon icon="mage:email"></iconify-icon>
                    </span>
                    <input asp-for="Input.Email" type="email" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="Enter Email">
                </div>
                <button type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32">Resend Email Confirmation</button>

                <div class="text-center">
                    <a asp-page="./Login" class="text-primary-600 fw-bold mt-24">Back to Sign In</a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
