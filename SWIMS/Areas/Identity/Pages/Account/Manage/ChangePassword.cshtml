@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@{
    ViewData["script"] = @"  <script>
    // ================== Password Show Hide Js Start ==========
    function initializePasswordToggle(toggleSelector) {
        $(toggleSelector).on('click', function() {
            $(this).toggleClass('ri-eye-off-line');
            var input = $($(this).attr('data-toggle'));
            if (input.attr('type') === 'password') {
                input.attr('type', 'text');
            } else {
                input.attr('type', 'password');
            }
        });
    }
    // Call the function
    initializePasswordToggle('.toggle-password');
    // ========================= Password Show Hide Js End ===========================
    </script>";
}

<h6 class="text-lg mb-8">@ViewData["title"]</h6>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row gy-3">
    <div class="col-md-6">

        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            <div class="mb-0">
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <div class="position-relative ">
                    <div class="icon-field">
                        <span class="icon top-50 translate-middle-y">
                            <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                        </span>
                        <input asp-for="Input.OldPassword" type="password" class="form-control h-56-px bg-neutral-50 radius-12" id="current-password" placeholder=" Current Password">
                    </div>
                    <span class="toggle-password ri-eye-line cursor-pointer position-absolute end-0 top-50 translate-middle-y me-16 text-secondary-light" data-toggle="#current-password"></span>
                </div>
            </div>

            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            <div class="mb-0">
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <div class="position-relative ">
                    <div class="icon-field">
                        <span class="icon top-50 translate-middle-y">
                            <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                        </span>
                        <input asp-for="Input.NewPassword" type="password" class="form-control h-56-px bg-neutral-50 radius-12" id="new-password" placeholder=" New Password">
                    </div>
                    <span class="toggle-password ri-eye-line cursor-pointer position-absolute end-0 top-50 translate-middle-y me-16 text-secondary-light" data-toggle="#new-password"></span>
                </div>
            </div>


            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <div class="mb-0">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <div class="position-relative ">
                    <div class="icon-field">
                        <span class="icon top-50 translate-middle-y">
                            <iconify-icon icon="solar:lock-password-outline"></iconify-icon>
                        </span>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control h-56-px bg-neutral-50 radius-12" id="confirm-new-password" placeholder=" Confirm New Password">
                    </div>
                    <span class="toggle-password ri-eye-line cursor-pointer position-absolute end-0 top-50 translate-middle-y me-16 text-secondary-light" data-toggle="#confirm-new-password"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32">Update password</button>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
