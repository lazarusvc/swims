@model PolicyEditViewModel
@{
    ViewData["Title"] = "Create Policy";
}
<h2>Create Policy</h2>
<hr />

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <small class="text-muted">Use this exact name in [Authorize(Policy = "Name")].</small>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
    </div>

    <div class="form-check form-switch mb-3">
        <input asp-for="IsEnabled" class="form-check-input" />
        <label asp-for="IsEnabled" class="form-check-label">Enabled</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Allowed Roles</label>
        <select asp-for="SelectedRoleIds" asp-items="Model.AllRoles" class="form-select" multiple size="8"></select>
        <span class="form-text">Hold Ctrl/Cmd to select multiple.</span>
    </div>

    <button class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
