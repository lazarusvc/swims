@model EndpointPolicyEditViewModel
@{
    ViewData["Title"] = "Edit Endpoint Policy";
}
<h2>Edit Endpoint Policy</h2>
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Policy</label>
        <select asp-for="PolicyName" asp-items="Model.Policies" class="form-select"></select>
    </div>

    @await Html.PartialAsync("../Shared/_MatchTypeFields", Model)

    <button class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
