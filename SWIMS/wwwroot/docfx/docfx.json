{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../../", // ← path to your .csproj directory (e.g. "../MyProject.Web")
          "files": [ "**/*.csproj" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "dest": "../docs", // ← output into wwwroot/docs
    "content": [
      {
        "files": [ "**/*.{md,yml}" ],
        "src": "."
      }
    ],
    "resource": [
      {
        "files": [ "images/**" ],
        "src": "images"
      }
    ],
    "template": [ "default", "modern" ],
    "globalMetadata": {
      "_enableSearch": true,
      "pdf": true
    }
  }
}
