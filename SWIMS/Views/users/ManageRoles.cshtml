@model SWIMS.Models.ViewModels.EditUserRolesVM
@{
    ViewData["Title"] = "Manage Roles";
}

<h3 class="mb-3">Manage Roles for @Model.DisplayName</h3>

<form asp-action="ManageRoles" asp-route-id="@Model.UserId" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" />

    <div class="border rounded p-3" style="max-height:60vh; overflow:auto;">
        <ul class="list-unstyled">
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <li class="form-check mb-2">
                    <input class="form-check-input"
                           type="checkbox"
                           asp-for="Roles[i].Selected" />
                    <label class="form-check-label" for="@Html.IdFor(m => m.Roles[i].Selected)">
                        @Model.Roles[i].RoleName
                    </label>
                    <input type="hidden" asp-for="Roles[i].RoleId" />
                    <input type="hidden" asp-for="Roles[i].RoleName" />
                </li>
            }
        </ul>
    </div>

    <div class="d-flex gap-10">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
