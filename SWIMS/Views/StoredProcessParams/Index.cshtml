@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<SWIMS.Models.StoredProcessParam>
@{
    ViewData["Title"] = "Parameters";
    var proc = ViewBag.Process as SWIMS.Models.StoredProcess;
    var processes = ViewBag.Processes as SelectList;
}
<form asp-action="Select" method="post" class="mb-3">
    @Html.AntiForgeryToken()
    <div class="input-group">
        <select class="form-select" name="processId" asp-items="processes">
            <option value="">-- Choose a stored process --</option>
        </select>
        <button class="btn btn-primary" type="submit">Load</button>
    </div>
</form>

@if (proc is null)
{
    <div class="alert alert-info">Select a stored process to view or edit its parameters.</div>
}
else
{
    <h5 class="mt-3">@proc.Name</h5>
    <p class="text-muted">@proc.Description</p>
    <p>
        <a class="btn btn-success" asp-action="Create" asp-route-processId="@proc.Id">Add Parameter</a>
        <a class="btn btn-outline-secondary" asp-controller="StoredProcessesAdmin" asp-action="Index">Back to Processes</a>
    </p>

    if (!Model.Any())
    {
        <div class="alert alert-secondary">No parameters defined yet.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead><tr><th>Key</th><th>Type</th><th>Value</th><th></th></tr></thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.Key</td>
                            <td>@p.DataType</td>
                            <td>@p.Value</td>
                            <td class="text-nowrap">
                                <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
