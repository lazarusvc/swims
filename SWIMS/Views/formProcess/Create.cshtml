@model SWIMS.Models.SW_formProcess

@{
    ViewData["Title"] = "SW_formProcess | NEW";
}
<hr />
<div class="row">
<div class="col-md-12">
<div class="card">
<div class="card-header">
<a asp-action="Create" class="btn btn-success">Create New</a>
</div>
<div class="card-body" style="overflow-y:scroll; max-height: 250px;">
        <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-24 gy-3 align-items-center">
                <label asp-for="url" class="form-label mb-0 col-sm-4"></label>
                <div class="col-sm-10">
                <select asp-for="url" class="form-control" asp-items="ViewBag.processes"></select>
                <span asp-validation-for="url" class="text-danger"></span>
                </div>
            </div>
                    <div class="form-group">
                        <label asp-for="name" class="control-label">Label</label>
                        <input asp-for="name" class="form-control" id="ProcessName" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
            <div class="row mb-24 gy-3 align-items-center">
                <label asp-for="SW_formsId" class="form-label mb-0 col-sm-4"></label>
                <div class="col-sm-10">
                  <select asp-for="SW_formsId" class="form-control" asp-items="ViewBag.SW_formsId"></select>
                </div>
            </div>
                <input type="submit" value="Create" class="btn btn-primary" />
        </form>
        </div>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        (function() {
          var sel = document.querySelector('select[name="url"]');   // your existing process select
          var nameInput = document.getElementById('ProcessName');
          if (!sel || !nameInput) return;

          sel.addEventListener('change', function() {
            // Prefill with the visible option text if the label is blank
            if (!nameInput.value || nameInput.value.trim().length === 0) {
              var opt = sel.options[sel.selectedIndex];
              if (opt && opt.text) nameInput.value = opt.text;
            }
          });
        })();
    </script>

}