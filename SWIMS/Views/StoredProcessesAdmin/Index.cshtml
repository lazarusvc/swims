@model IEnumerable<SWIMS.Models.StoredProcess>
@{
    ViewData["Title"] = "Stored Processes (Admin)";
}
<h2>Stored Processes (Admin)</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Create Process</a>
    <a class="btn btn-outline-secondary" asp-area="" asp-controller="StoredProcesses" asp-action="Index">Run View</a>
</p>

<table class="table table-striped table-sm">
    <thead>
        <tr><th>Name</th><th>Description</th><th>Connection</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@(string.IsNullOrWhiteSpace(p.ConnectionKey) ? $"{p.DataSource}/{p.Database}" : p.ConnectionKey)</td>
                <td class="text-nowrap">
                    <a class="btn btn-primary btn-sm" asp-area="" asp-controller="StoredProcessParams" asp-action="Index" asp-route-processId="@p.Id">Params</a>
                    <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                    <a class="btn btn-outline-info btn-sm" asp-area="" asp-controller="StoredProcesses" asp-action="Run" asp-route-id="@p.Id">Run</a>
                </td>
            </tr>
        }
    </tbody>
</table>
