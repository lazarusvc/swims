@model SWIMS.Models.ViewModels.EditRoleUsersVM
@{
    ViewData["Title"] = "Manage Users in Role";
}

<h3 class="mb-3">Manage Users in "@Model.RoleName"</h3>

<form asp-action="ManageUsers" asp-route-id="@Model.RoleId" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RoleId" />

    <div class="border rounded p-3" style="max-height:60vh; overflow:auto;">
        <ul class="list-unstyled">
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <li class="form-check mb-2">
                    <input class="form-check-input"
                           type="checkbox"
                           asp-for="Users[i].Selected" />
                    <label class="form-check-label" for="@Html.IdFor(m => m.Users[i].Selected)">
                        @Model.Users[i].DisplayName
                        @if (!string.IsNullOrWhiteSpace(Model.Users[i].Email))
                        {
                            <span class="text-muted">(@Model.Users[i].Email)</span>
                        }
                    </label>
                    <input type="hidden" asp-for="Users[i].UserId" />
                    <input type="hidden" asp-for="Users[i].DisplayName" />
                    <input type="hidden" asp-for="Users[i].Email" />
                </li>
            }
        </ul>
    </div>

    <div class="d-flex gap-10">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>
