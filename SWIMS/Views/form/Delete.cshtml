@model SWIMS.Models.SW_form

@{
    ViewData["Title"] = "Delete";
}

<h6 style="color:red;">Are you sure you want to delete this?</h6>
<div class="card basic-data-table">
    <div class="card-header">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    UUID:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.uuid)
                </dd>
                <dt class="col-sm-2">
                    NAME:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.name)
                </dd>
                <dt class="col-sm-2">
                    DESC:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.desc)
                </dd>
                <dt class="col-sm-2">
                    DATEMODIFIED:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.dateModified)
                </dd>
                <dt class="col-sm-2">
                    SITE LOCATION:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SW_identity.name)
                </dd>
            </dl>
        </div>
    </div>
</div>
